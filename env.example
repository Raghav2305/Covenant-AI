# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/contract_ai
REDIS_URL=redis://localhost:6379

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
VECTOR_DB_URL=your_vector_db_url_here
VECTOR_DB_API_KEY=your_vector_db_api_key

# MCP Configuration (Model Context Protocol)
MCP_SERVER_URL=http://localhost:3001
MCP_SERVER_PORT=3001
MCP_CLIENT_ID=contract_ai_copilot
MCP_DATABASE_CONNECTOR_URL=http://localhost:3002
MCP_CRM_CONNECTOR_URL=http://localhost:3003
MCP_FINANCE_CONNECTOR_URL=http://localhost:3004

# External System Connections (via MCP)
TRANSACTION_DB_URL=postgresql://user:pass@transaction-db:5432/transactions
CRM_API_URL=https://api.crm-system.com/v1
FINANCE_API_URL=https://api.finance-system.com/v1

# Security
SECRET_KEY=your_secret_key_here_minimum_32_characters
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Notification Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SERVICE_API_KEY=your_email_service_api_key
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url

# File Storage
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Development Settings
DEBUG=True
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Production Settings (uncomment for production)
# DEBUG=False
# ENVIRONMENT=production
# CORS_ORIGINS=https://yourdomain.com

# Performance Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
MAX_WORKERS=4

# Backup & Recovery
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_URL=s3://your-backup-bucket
